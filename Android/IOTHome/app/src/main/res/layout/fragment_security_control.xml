<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_monitoring_control_title"
        android:src="@drawable/monitoring_control_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_monitoring_control_main"
        android:src="@drawable/monitoring_icon"
        android:layout_below="@+id/imageView_monitoring_control_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intruder"
        android:id="@+id/textView_intruder"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_below="@+id/imageView_monitoring_control_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>