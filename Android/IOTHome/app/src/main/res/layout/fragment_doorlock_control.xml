<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_doorlock_control_title"
        android:src="@drawable/doorlock_control_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView_doorlock_control_title"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"  >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_doorlock_control_main"
                android:src="@drawable/door_locked"
                android:layout_marginTop="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_doorlock_control_button"
                android:src="@drawable/switch_vertical_open"
                android:layout_below="@+id/textView_switch_door_lock"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCK"
                android:id="@+id/textView_switch_door_lock"
                android:textColor="#00FF00"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_below="@+id/imageView_curtain_control_button"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNLOCK"
                android:id="@+id/textView_switch_door_unlock"
                android:textColor="#ff0000"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_below="@+id/imageView_doorlock_control_button"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>