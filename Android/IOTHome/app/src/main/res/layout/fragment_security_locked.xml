<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_security_main"
        android:src="@drawable/security_main_locked"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security_locked"
        android:id="@+id/textView_security_locked"
        android:layout_below="@+id/imageView_security_main"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security_locked2"
        android:id="@+id/textView_security_locked2"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_below="@+id/textView_security_locked"
        android:layout_centerHorizontal="true" />
</RelativeLayout>